include ../mixins.pug

doctype html
html(class="no-js  page", lang="ru")

  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    block meta
      title Покорми кота

    block head
      link(rel="stylesheet", href="css/style.css")
      link(rel="shortcut icon", href="img/favicon-cat.png", type="image/png")
      script.
        document.documentElement.className = document.documentElement.className.replace('no-js', 'js');

  body
    img.main-img(src='img/pattern.png' alt='pattern')
    img.main-img(src='img/shadow.png' alt='pattern')
    block content

    block page-bottom
      script(src="js/script.min.js")
